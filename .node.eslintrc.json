{
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "simple-import-sort/imports": "off",
        "simple-import-sort/exports": "off",
        "import/order": [
            "off",
            {
                "groups": ["builtin", "external", "parent", "sibling", "index"],
                "newlines-between": "always"
            }
        ],
        "import/no-commonjs": "off",
        "import/no-nodejs-modules": "off"
    }
}
